  "components": {
    "schemas": {
      "EnumRole": {
        "enum": [
          "Admin",
          "Customer"
        ],
        "type": "string"
      },
      "HoaDonDTO": {
        "required": [
          "hoaDon_Saches",
          "ngayTao",
          "username"
        ],
        "type": "object",
        "properties": {
          "maHoaDon": {
            "type": "string",
            "format": "uuid"
          },
          "ngayTao": {
            "type": "string",
            "format": "date-time"
          },
          "username": {
            "minLength": 1,
            "type": "string"
          },
          "hoaDon_Saches": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/HoaDon_SachDTO"
            }
          }
        },
        "additionalProperties": false
      },
      "HoaDon_SachDTO": {
        "required": [
          "maSach",
          "soLuong"
        ],
        "type": "object",
        "properties": {
          "maSach": {
            "minLength": 1,
            "type": "string"
          },
          "soLuong": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "LoginDTO": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RegisterDTO": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "maxLength": 50,
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&#^()\\-_=+]).{8,}$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UserDTO": {
        "required": [
          "role",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "maxLength": 50,
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&#^()\\-_=+]).{8,}$",
            "type": "string",
            "nullable": true
          },
          "role": {
            "$ref": "#/components/schemas/EnumRole"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "Nhập JWT token dạng: Bearer {token}",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
